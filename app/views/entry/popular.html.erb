<header class="bg-white shadow-sm">
  <div class="mx-auto max-w-7xl px-4 py-4 sm:px-6 lg:px-8">
    <h1 class="text-lg font-semibold leading-6 text-gray-900">Últimas Noticias</h1>
  </div>
</header>
<main>
  <div class="mx-auto py-6 sm:px-6 lg:px-8">

    <h3>Análisis de notas populares 24Hrs..</h3>
    <div class="container py-4">
      <div class="row">
        <div class="col">
        <h3>Notas por medio</h3>
          <%= pie_chart @entries.group("sites.name").count, donut: true %>
        </div>
        <div class="col">
          <h3>Interacciones por medio</h3>    
          <%= pie_chart @entries.group("sites.name").sum(:total_count), donut: true %>
        </div>
      </div>
    </div>

    <hr>

    <div class="container py-4">
      <div class="row">
        <div class="col">
        <h3>Apariciones Etiquetas</h3>
          <%= pie_chart @tags_count, donut: true %>
        </div>
        <div class="col">
          <h3>Interacciones Etiquetas</h3>    
          <%= pie_chart @tags_interactions, donut: true %>
        </div>
      </div>
    </div>

    <div class="my-2">
      <h3>Apariciones Etiquetas</h2>
      <%= render partial: "tag/tag_pill", collection: @tags %>
      <p><small class="text-muted px-1">*Cantidad de veces que aparecen las etiquetas en las notas</small></p>
    </div>
    <hr>
    <div class="my-2">
      <h3>Interacciones Etiquetas</h2>
      <%= render partial: "tag/tag_pill_interactions", collection: @tags.to_a.sort_by(&:interactions).reverse %>
      <p><small class="text-muted px-1">*Interacciones en las notas</small></p>
    </div>

    <hr>

    <div class="px-4 sm:px-4 lg:px-4">
      <div class="sm:flex sm:items-center">
        <div class="sm:flex-auto">
          <h1 class="text-base font-semibold leading-6 text-gray-900">Users</h1>
          <p class="mt-2 text-sm text-gray-700">A list of all the users in your account including their name, title, email and role.</p>
        </div>
      </div>
      <div class="mt-8 flow-root">
        <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
            <table class="min-w-full divide-y divide-gray-300">
              <thead>
                <tr>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"></th>
                  <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-3">Titulo</th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Medio</th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Fecha</th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Interacciones</th>
                </tr>
              </thead>
              <tbody class="bg-white">
                <%@entries.each do |entry|%>
                <tr class="even:bg-gray-50">
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%=image_tag entry.clean_image, size: 150, loading: 'lazy', onerror: 'this.onerror=null;this.src="https://via.placeholder.com/300x250";'%>
                  </td>
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-3">
                    <%=entry.title%>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%=entry.site.name%></td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%=entry.published_at%></td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%=entry.total_count%></td>
                </tr>
                <%end%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  </div>
</main>  