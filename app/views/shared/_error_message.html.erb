<%
  # Shared error message partial
  # Usage: render partial: 'shared/error_message', locals: { message: 'Error message' }
  message ||= 'Ha ocurrido un error. Por favor intente nuevamente.'
%>

<div class="flex items-center justify-center py-8 px-4">
  <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-6 max-w-md shadow-sm">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <svg class="h-6 w-6 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-red-800">
          Error
        </h3>
        <div class="mt-2 text-sm text-red-700">
          <%= message %>
        </div>
      </div>
    </div>
  </div>
</div>

