<%# Twitter Profile Insights Section
# Displays profile distribution charts (by count and by interactions)
#
# Required locals:
#   - presenter: TwitterDashboardPresenter instance
%>

<% presenter = local_assigns[:presenter] %>
<% return unless presenter&.has_profile_data? %>

<section id="profiles">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">
    <i class="fa-solid fa-user-group text-green-600 mr-2"></i>
    <%= t('twitter.profiles.title') %>
  </h2>
  
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Profile Counts Chart -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">
        <%= t('twitter.profiles.tweets_by_profile') %>
      </h3>
      <%= pie_chart presenter.profiles_count,
            donut: true,
            colors: presenter.chart_colors(:profile_counts) %>
    </div>
    
    <!-- Profile Interactions Chart -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">
        <%= t('twitter.profiles.interactions_by_profile') %>
      </h3>
      <%= pie_chart presenter.profiles_interactions,
            donut: true,
            colors: presenter.chart_colors(:profile_interactions) %>
    </div>
  </div>
</section>

