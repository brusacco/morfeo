<div>
  <p><strong>Fecha:</strong> <%= @template.date.strftime('%d/%m/%Y') %></p>
  <h1><%= @template.title %></h1>
  <p><strong>Topic:</strong> <%= @template.topic.name %></p>

  <div class="section">
    <p><strong>Resumen:</strong></p>
    <p><%= @template.sumary %></p>
  </div>

  <div>
    <%= @entries.inspect %>
  </div>

  <div id="loading">
    <%= line_chart @chart_entries.count('*'), 
        adapter: 'highcharts', 
        library: {
          plotOptions: {
            series: {
              enableMouseTracking: false,
              shadow: false,
              animation: false,
              dataLabels: { enabled: true }
            }
          }
        } %>
  </div>


  <div>
    <% @chart_entries.each do |date, count| %>
      <p><%= date.published_at.strftime('%d/%m/%Y') %>: <%= count %></p>
    <% end %>
  </div>

</div>
