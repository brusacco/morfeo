  </div>
</header>
<main>
  <div class="mx-auto py-6 sm:px-6 lg:px-8">
    <%@topicos.each do |topic|%>
      <% next if topic.list_entries.empty?%>
      <%= render partial: 'entry/entries', locals: { last_entries: topic.list_entries.limit(12), title: topic.name } %>
    <%end%>
  </div>
</main>