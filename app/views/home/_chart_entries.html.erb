<div class="flex flex-col p-4 space-y-4">
  <div class="flex justify-between items-center mb-4">
    <div>
      <span class="font-semibold">Fecha:</span> <%= entries_date.strftime("%d/%m/%Y") %> | 
      <span class="font-semibold">Tópico:</span> <%= topic %>
    </div>

    <button type="button" class="inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm"
      data-action="modal#closeModal">
      Cerrar
    </button>
  </div>

  <div class="flex flex-col space-y-2">
    <div class="flex flex-row bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
      <div class="w-1/2 py-3 px-6 text-left">Notas</div>
      <div class="w-1/4 py-3 px-6 text-left">Medios</div> <!-- Ajusta el ancho según sea necesario -->
      <div class="w-1/6 py-3 px-6 text-left">Interacciones</div> <!-- Cambiado a text-left para alineación -->
    </div>
    
    <div class="flex flex-col space-y-2">
      <%= render partial: 'home/chart_entry', collection: topic_entries, as: :entry %>
    </div>
  </div>
</div>
