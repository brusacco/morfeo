<div class="space-y-4">
  <!-- Filter/Context Bar -->
  <div class="bg-gradient-to-r from-indigo-50 to-blue-50 rounded-lg p-4 border border-indigo-100">
    <div class="flex flex-wrap items-center gap-4 text-sm">
      <div class="flex items-center">
        <i class="fas fa-calendar-day text-indigo-600 mr-2"></i>
        <span class="font-medium text-gray-700">Fecha:</span>
        <span class="ml-1 text-gray-900 font-semibold"><%= entries_date.strftime("%d/%m/%Y") %></span>
      </div>
      <div class="h-4 w-px bg-indigo-200"></div>
      <div class="flex items-center">
        <i class="fas fa-tag text-indigo-600 mr-2"></i>
        <span class="font-medium text-gray-700">TÃ³pico:</span>
        <span class="ml-1 text-gray-900 font-semibold"><%= topic %></span>
      </div>
      <% if polarity.present? && polarity != "" %>
        <div class="h-4 w-px bg-indigo-200"></div>
        <div class="flex items-center">
          <i class="fas fa-smile text-indigo-600 mr-2"></i>
          <span class="font-medium text-gray-700">Polaridad:</span>
          <% case polarity.downcase %>
          <% when "positive" %>
            <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              <i class="fas fa-smile mr-1"></i> Positivo
            </span>
          <% when "negative" %>
            <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
              <i class="fas fa-frown mr-1"></i> Negativo
            </span>
          <% when "neutral" %>
            <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
              <i class="fas fa-meh mr-1"></i> Neutro
            </span>
          <% else %>
            <span class="ml-1 text-gray-900 font-semibold"><%= polarity %></span>
          <% end %>
        </div>
      <% end %>
      <div class="ml-auto flex items-center text-gray-600">
        <i class="fas fa-newspaper mr-2"></i>
        <span class="font-semibold text-gray-900"><%= topic_entries.count %></span>
        <span class="ml-1">publicaciones</span>
      </div>
    </div>
  </div>

  <!-- Entries Table -->
  <div class="overflow-hidden rounded-lg border border-gray-200">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
              <i class="fas fa-newspaper mr-1"></i> Notas
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
              <i class="fas fa-tags mr-1"></i> Etiquetas
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
              <i class="fas fa-building mr-1"></i> Medios
            </th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider">
              <i class="fas fa-heart mr-1"></i> Interacciones
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <%= render partial: 'home/chart_entry', collection: topic_entries, as: :entry %>
        </tbody>
      </table>
    </div>
  </div>

  <% if topic_entries.empty? %>
    <div class="text-center py-12">
      <i class="fas fa-inbox text-gray-400 text-5xl mb-4"></i>
      <p class="text-gray-500 text-lg">No se encontraron publicaciones para esta fecha</p>
    </div>
  <% end %>
</div>
