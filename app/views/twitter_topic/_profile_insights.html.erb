<!-- Profiles -->
<section id="profiles-list" class="space-y-6">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">
      <i class="fa-brands fa-twitter text-sky-600 mr-2"></i>
      Cuentas que más han mencionado este tópico
    </h2>
    <% if profiles_count.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-lg font-semibold text-gray-700 mb-4">Top Perfiles por Tweets</h3>
          <% profiles_count.take(10).each do |profile_data| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg mb-2 hover:bg-sky-50 transition-colors group">
              <div class="flex items-center space-x-3 flex-1 min-w-0">
                <% if profile_data[:profile]&.picture.present? %>
                  <%= image_tag profile_data[:profile].picture, class: 'h-10 w-10 flex-shrink-0 rounded-full bg-gray-300', alt: profile_data[:name] %>
                <% else %>
                  <img class="h-10 w-10 flex-shrink-0 rounded-full bg-gray-300" src="https://placehold.co/300x300" alt="">
                <% end %>
                <div class="flex-1 truncate">
                  <h3 class="truncate text-sm font-medium text-gray-900"><%= profile_data[:name] %></h3>
                  <% if profile_data[:profile]&.username.present? %>
                    <p class="truncate text-xs text-gray-500">@<%= profile_data[:profile].username %></p>
                  <% end %>
                </div>
              </div>
              <span class="font-bold text-sky-600"><%= number_with_delimiter(profile_data[:count]) %></span>
            </div>
          <% end %>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-gray-700 mb-4">Top Perfiles por Interacciones</h3>
          <% profiles_interactions.take(10).each do |profile_data| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg mb-2 hover:bg-green-50 transition-colors group">
              <div class="flex items-center space-x-3 flex-1 min-w-0">
                <% if profile_data[:profile]&.picture.present? %>
                  <%= image_tag profile_data[:profile].picture, class: 'h-10 w-10 flex-shrink-0 rounded-full bg-gray-300', alt: profile_data[:name] %>
                <% else %>
                  <img class="h-10 w-10 flex-shrink-0 rounded-full bg-gray-300" src="https://placehold.co/300x300" alt="">
                <% end %>
                <div class="flex-1 truncate">
                  <h3 class="truncate text-sm font-medium text-gray-900"><%= profile_data[:name] %></h3>
                  <% if profile_data[:profile]&.username.present? %>
                    <p class="truncate text-xs text-gray-500">@<%= profile_data[:profile].username %></p>
                  <% end %>
                </div>
              </div>
              <span class="font-bold text-green-600"><%= number_with_delimiter(profile_data[:interactions]) %></span>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No hay datos de perfiles disponibles.</p>
    <% end %>
  </div>
</section>

