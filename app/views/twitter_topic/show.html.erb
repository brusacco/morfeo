        <%= link_to pdf_twitter_topic_path(@topic, days_range: 30), target: '_blank', 
            rel: 'noopener noreferrer',
            class: 'inline-flex items-center justify-center px-3 py-2 border border-indigo-600 text-sm font-medium rounded-md text-indigo-600 bg-white hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors',
            'aria-label': "Generar PDF - 30 días" do %>
          30d
        <% end %>
        <%= link_to pdf_twitter_topic_path(@topic, days_range: 60), target: '_blank', 
            rel: 'noopener noreferrer',
            class: 'inline-flex items-center justify-center px-3 py-2 border border-indigo-600 text-sm font-medium rounded-md text-indigo-600 bg-white hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors',
            'aria-label': "Generar PDF - 60 días" do %>
