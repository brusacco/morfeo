<% content_for :extra_stylesheets do %>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
  <style>
    /* Hide scrollbar for Chrome, Safari and Opera */
    .scrollbar-hide::-webkit-scrollbar {
      display: none;
    }
    /* Hide scrollbar for IE, Edge and Firefox */
    .scrollbar-hide {
      -ms-overflow-style: none;  /* IE and Edge */
      scrollbar-width: none;  /* Firefox */
    }
    /* Ensure proper overflow for sticky to work */
    html, body {
      overflow-x: hidden;
      overflow-y: auto;
      height: 100%;
    }
    /* Smooth scroll behavior */
    html {
      scroll-behavior: smooth;
      scroll-padding-top: 4rem;
    }
    /* Ensure sticky navigation stays above all content including charts */
    #twitter-nav {
      position: sticky;
      position: -webkit-sticky;
      top: 0;
      z-index: 9999;
      background: white;
      width: 100%;
    }
    /* Lower z-index for chart containers and all Highcharts elements */
    .chart-container, 
    .highcharts-container,
    .highcharts-container *,
    .highcharts-root,
    svg[class*="highcharts"],
    [data-controller="topics"],
    div[class*="w-full"][class*="overflow-hidden"] {
      z-index: 1 !important;
    }
    
    /* Ensure chart parent cards don't interfere */
    section .bg-white {
      isolation: auto;
    }
  </style>
<% end %>
<% content_for :extra_javascripts do %>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <%= javascript_include_tag 'datatables_config', 'data-turbo-track': 'reload' %>
<% end %>
<header class="bg-white shadow-sm border-b border-gray-200">
  <div class="mx-auto px-4 py-6 sm:px-6 lg:px-8">
    <div class="md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <h1 class="text-3xl font-bold text-gray-900 tracking-tight">
          <i class="fa-brands fa-twitter text-sky-500 mr-2" aria-hidden="true"></i><%= @topic.name %> · Twitter <span class="text-xs text-gray-500">(BETA)</span>
        </h1>
        <p class="mt-1 text-sm text-gray-600">Análisis de tweets - Últimos <%= DAYS_RANGE %> días</p>
      </div>
      <div class="mt-4 flex space-x-3 md:mt-0 md:ml-4">
        <%= link_to pdf_twitter_topic_path(@topic), target: '_blank', 
            rel: 'noopener noreferrer',
            class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-sky-600 hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 transition-colors',
            'aria-label': "Generar reporte PDF del tópico #{@topic.name}" do %>
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V7.414A2 2 0 0015.414 6L12 2.586A2 2 0 0010.586 2H6zm5 6a1 1 0 10-2 0v3.586l-1.293-1.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 11.586V8z" clip-rule="evenodd" />
          </svg>
          Generar Reporte PDF
        <% end %>
      </div>
    </div>
  </div>
</header>

<!-- Sticky Navigation -->
<nav class="border-b border-gray-200 shadow-md" id="twitter-nav">
  <div class="mx-auto px-4 sm:px-6 lg:px-8 bg-white">
    <div class="flex items-center justify-between h-12 overflow-x-auto scrollbar-hide">
      <div class="flex space-x-1 md:space-x-4">
        <a href="#kpis" 
           data-turbo="false"
           class="px-2 md:px-3 py-2 text-xs md:text-sm font-medium text-gray-700 hover:text-sky-600 hover:bg-sky-50 rounded-md transition-colors whitespace-nowrap"
           aria-label="Ir a sección de métricas clave">
          <i class="fa-solid fa-gauge-high mr-1 md:mr-2" aria-hidden="true"></i>
          <span class="hidden sm:inline">Métricas</span>
        </a>
        <a href="#temporal-intelligence" 
           data-turbo="false"
           class="px-2 md:px-3 py-2 text-xs md:text-sm font-medium text-gray-700 hover:text-sky-600 hover:bg-sky-50 rounded-md transition-colors whitespace-nowrap"
           aria-label="Ir a inteligencia temporal">
          <i class="fa-solid fa-clock mr-1 md:mr-2" aria-hidden="true"></i>
          <span class="hidden sm:inline">Temporal</span>
        </a>
        <a href="#charts" 
           data-turbo="false"
           class="px-2 md:px-3 py-2 text-xs md:text-sm font-medium text-gray-700 hover:text-sky-600 hover:bg-sky-50 rounded-md transition-colors whitespace-nowrap"
           aria-label="Ir a evolución temporal">
          <i class="fa-solid fa-chart-line mr-1 md:mr-2" aria-hidden="true"></i>
          <span class="hidden sm:inline">Evolución</span>
        </a>
        <a href="#tags" 
           data-turbo="false"
           class="px-2 md:px-3 py-2 text-xs md:text-sm font-medium text-gray-700 hover:text-sky-600 hover:bg-sky-50 rounded-md transition-colors whitespace-nowrap"
           aria-label="Ir a etiquetas">
          <i class="fa-solid fa-tags mr-1 md:mr-2" aria-hidden="true"></i>
          <span class="hidden sm:inline">Etiquetas</span>
        </a>
        <a href="#profiles" 
           data-turbo="false"
           class="px-2 md:px-3 py-2 text-xs md:text-sm font-medium text-gray-700 hover:text-sky-600 hover:bg-sky-50 rounded-md transition-colors whitespace-nowrap"
           aria-label="Ir a perfiles">
          <i class="fa-brands fa-twitter mr-1 md:mr-2" aria-hidden="true"></i>
          <span class="hidden sm:inline">Perfiles</span>
        </a>
        <a href="#tweets" 
           data-turbo="false"
           class="px-2 md:px-3 py-2 text-xs md:text-sm font-medium text-gray-700 hover:text-sky-600 hover:bg-sky-50 rounded-md transition-colors whitespace-nowrap"
           aria-label="Ir a tabla de tweets">
          <i class="fa-solid fa-newspaper mr-1 md:mr-2" aria-hidden="true"></i>
          <span class="hidden sm:inline">Tweets</span>
        </a>
      </div>
      <!-- Back to Top Button -->
      <a href="#" 
         id="backToTop" 
         class="ml-4 inline-flex items-center px-3 py-2 text-sm font-medium text-sky-600 hover:text-sky-700 hover:bg-sky-50 rounded-md transition-colors cursor-pointer whitespace-nowrap"
         aria-label="Volver arriba">
        <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Arriba
      </a>
    </div>
  </div>
</nav>
<script>
  // Simple back to top functionality
  document.addEventListener('DOMContentLoaded', function() {
    const backToTopLink = document.getElementById('backToTop');
    if (backToTopLink) {
      backToTopLink.addEventListener('click', function(e) {
        e.preventDefault();
        document.documentElement.scrollTop = 0;
        document.body.scrollTop = 0;
      });
    }
  });
  
  document.addEventListener('turbo:load', function() {
    const backToTopLink = document.getElementById('backToTop');
    if (backToTopLink) {
      backToTopLink.addEventListener('click', function(e) {
        e.preventDefault();
        document.documentElement.scrollTop = 0;
        document.body.scrollTop = 0;
      });
    }
  });
</script>

<main class="bg-gray-50 min-h-screen">
  <div class="mx-auto py-8 px-4 sm:px-6 lg:px-8 space-y-8">
    <!-- KPI cards -->
    <section id="kpis">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg hover:border-sky-300 transition-all duration-200 cursor-default group">
          <div class="flex items-center justify-between mb-2">
            <div class="text-sm font-medium text-gray-500 uppercase tracking-wide">Tweets</div>
            <div class="p-2 bg-gray-100 rounded-lg group-hover:bg-sky-100 transition-colors">
              <i class="fa-brands fa-twitter text-gray-600 group-hover:text-sky-600 transition-colors" aria-hidden="true"></i>
            </div>
          </div>
          <div class="mt-2 text-3xl font-bold text-gray-900 group-hover:text-sky-600 transition-colors">
            <%= number_with_delimiter(@total_posts) %>
          </div>
          <p class="mt-2 text-sm text-gray-500">Tweets etiquetados con este tópico en los últimos <%= DAYS_RANGE %> días.</p>
        </div>
        
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg hover:border-sky-300 transition-all duration-200 cursor-default group">
          <div class="flex items-center justify-between mb-2">
            <div class="text-sm font-medium text-gray-500 uppercase tracking-wide">Interacciones</div>
            <div class="p-2 bg-sky-100 rounded-lg group-hover:bg-sky-200 transition-colors">
              <i class="fa-solid fa-chart-line text-sky-600 group-hover:text-sky-700 transition-colors" aria-hidden="true"></i>
            </div>
          </div>
          <div class="mt-2 text-3xl font-bold text-sky-600 group-hover:scale-105 transition-transform">
            <%= number_with_delimiter(@total_interactions) %>
          </div>
          <p class="mt-2 text-sm text-gray-500">Me gusta + Retweets + Respuestas.</p>
        </div>
        
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg hover:border-purple-300 transition-all duration-200 cursor-default group">
          <div class="flex items-center justify-between mb-2">
            <div class="text-sm font-medium text-gray-500 uppercase tracking-wide">Vistas</div>
            <div class="p-2 bg-purple-100 rounded-lg group-hover:bg-purple-200 transition-colors">
              <i class="fa-solid fa-eye text-purple-600 group-hover:text-purple-700 transition-colors" aria-hidden="true"></i>
            </div>
          </div>
          <div class="mt-2 text-3xl font-bold text-purple-600 group-hover:scale-105 transition-transform">
            <%= number_with_delimiter(@total_views) %>
          </div>
          <p class="mt-2 text-sm text-gray-500">Total de visualizaciones de los tweets.</p>
        </div>
        
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg hover:border-green-300 transition-all duration-200 cursor-default group">
          <div class="flex items-center justify-between mb-2">
            <div class="text-sm font-medium text-gray-500 uppercase tracking-wide">Promedio</div>
            <div class="p-2 bg-green-100 rounded-lg group-hover:bg-green-200 transition-colors">
              <i class="fa-solid fa-calculator text-green-600 group-hover:text-green-700 transition-colors" aria-hidden="true"></i>
            </div>
          </div>
          <div class="mt-2 text-3xl font-bold text-green-600 group-hover:scale-105 transition-transform">
            <%= number_with_delimiter(@average_interactions) %>
          </div>
          <p class="mt-2 text-sm text-gray-500">Interacciones promedio por tweet.</p>
        </div>
      </div>
    </section>
    
    <!-- TEMPORAL INTELLIGENCE SECTION -->
    <%= render 'temporal_intelligence' %>
    
    <!-- Charts -->
    <section id="charts">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Evolución temporal</h2>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-medium text-gray-900">Tweets por día</h3>
            <span class="text-sm text-gray-500">Últimos <%= DAYS_RANGE %> días</span>
          </div>
          <div class="w-full overflow-hidden"
               data-controller="topics"
               data-topics-id-value="twitterPostsChart"
               data-topics-url-value="<%= entries_data_twitter_topics_path %>"
               data-topics-topic-id-value="<%= @topic.id %>"
               data-topics-title-value="false">
            <%= column_chart @chart_posts, xtitle: 'Fecha', ytitle: 'Tweets', label: 'Tweets',
                  id: 'twitterPostsChart', adapter: 'highcharts', library: { plotOptions: { series: { dataLabels: { enabled: true } } } },
                  colors: ['#0ea5e9'], thousands: '.' %>
            <%= render 'home/modal', graph_id: 'twitterPostsChart', controller_name: 'topics' %>
          </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-medium text-gray-900">Interacciones por día</h3>
            <span class="text-sm text-gray-500">Total diario</span>
          </div>
          <div class="w-full overflow-hidden"
               data-controller="topics"
               data-topics-id-value="twitterInteractionsChart"
               data-topics-url-value="<%= entries_data_twitter_topics_path %>"
               data-topics-topic-id-value="<%= @topic.id %>"
               data-topics-title-value="false">
            <%= column_chart @chart_interactions, xtitle: 'Fecha', ytitle: 'Interacciones', label: 'Interacciones',
                  id: 'twitterInteractionsChart', adapter: 'highcharts', library: { plotOptions: { series: { dataLabels: { enabled: true } } } },
                  colors: ['#10B981'], thousands: '.' %>
            <%= render 'home/modal', graph_id: 'twitterInteractionsChart', controller_name: 'topics' %>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Tag insights -->
    <section id="tags">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Etiquetas relacionadas</h2>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Cantidad de tweets por etiqueta</h3>
          <%= pie_chart @tag_counts.map { |tag| [tag.name, tag.count] }.to_h, donut: true, suffix: '%', colors: ['#0ea5e9', '#8B5CF6', '#EC4899', '#14B8A6', '#F59E0B'] %>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Interacciones por etiqueta</h3>
          <%= pie_chart @tag_interactions, donut: true, suffix: '%', colors: ['#0284c7', '#7C3AED', '#D97706', '#0EA5E9', '#EF4444'] %>
        </div>
      </div>
    </section>
    
    <% if @word_occurrences.any? %>
      <section class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-gray-900">Nube de Palabras - Tweets</h2>
          <div class="flex items-center space-x-4">
            <div class="flex items-center text-xs text-gray-600">
              <span class="inline-block w-3 h-3 rounded-full bg-green-500 mr-1.5"></span>
              <span>Positivas</span>
            </div>
            <div class="flex items-center text-xs text-gray-600">
              <span class="inline-block w-3 h-3 rounded-full bg-gray-500 mr-1.5"></span>
              <span>Neutrales</span>
            </div>
            <div class="flex items-center text-xs text-gray-600">
              <span class="inline-block w-3 h-3 rounded-full bg-red-500 mr-1.5"></span>
              <span>Negativas</span>
            </div>
          </div>
        </div>
        <div>
          <ul class="cloud">
            <% prepare_word_cloud_data(@word_occurrences, @positive_words, @negative_words).each do |word_data| %>
              <li style='color: <%= word_data[:color] %>' 
                  data-weight="<%= word_data[:weight] %>"
                  data-sentiment="<%= word_data[:sentiment] || 'neutral' %>">
                <%= word_data[:word] %>
              </li>
            <% end %>
          </ul>
        </div>
      </section>
    <% end %>
    
    <!-- Word clouds -->
    <section class="space-y-6">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Palabras más frecuentes</h3>
        <%= render partial: 'tag/tag_pill_array', collection: @word_occurrences %>
      </div>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Bigramas más frecuentes</h3>
        <%= render partial: 'tag/tag_pill_array', collection: @bigram_occurrences %>
      </div>
    </section>
    
    <!-- Profile insights -->
    <section id="profiles">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Perfiles destacados</h2>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Tweets por perfil</h3>
          <%= pie_chart @profiles_count, donut: true, colors: ['#0ea5e9', '#F97316', '#10B981', '#F59E0B', '#EC4899'] %>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Interacciones por perfil</h3>
          <%= pie_chart @profiles_interactions, donut: true, colors: ['#0284c7', '#6366F1', '#22C55E', '#D97706', '#EF4444'] %>
        </div>
      </div>
    </section>
    
    <!-- Top Media Sources Section -->
    <section class="mb-8">
      <%= render partial: 'site/sites', locals: { sites: @site_top_counts, title: 'Cuentas que mas han mencionado este tópico fueron:' } %>
    </section>
    
    <!-- All posts -->
    <section id="tweets">
      <%= render partial: 'twitter_topic/posts_table', locals: { posts: @posts, title: "Todos los tweets etiquetados con #{@topic.name}" } %>
    </section>
    
    <!-- Top posts cards -->
    <section>
      <%= render partial: 'twitter_topic/twitter_posts', locals: { twitter_posts: @top_posts, title: 'Tweets con más interacciones' } %>
    </section>
  </div>
</main>
