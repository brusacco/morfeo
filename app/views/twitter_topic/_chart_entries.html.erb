<div class="space-y-4">
  <!-- Filter/Context Bar -->
  <div class="bg-gradient-to-r from-sky-50 to-blue-50 rounded-lg p-4 border border-sky-100">
    <div class="flex flex-wrap items-center gap-4 text-sm">
      <div class="flex items-center">
        <i class="fas fa-calendar-day text-sky-600 mr-2"></i>
        <span class="font-medium text-gray-700">Fecha:</span>
        <span class="ml-1 text-gray-900 font-semibold"><%= entries_date.strftime("%d/%m/%Y") %></span>
      </div>
      <div class="h-4 w-px bg-sky-200"></div>
      <div class="flex items-center">
        <i class="fas fa-tag text-sky-600 mr-2"></i>
        <span class="font-medium text-gray-700">TÃ³pico:</span>
        <span class="ml-1 text-gray-900 font-semibold"><%= topic_name %></span>
      </div>
      <div class="h-4 w-px bg-sky-200"></div>
      <div class="flex items-center">
        <i class="fab fa-twitter text-sky-600 mr-2"></i>
        <span class="ml-1 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-sky-100 text-sky-800">
          Twitter/X
        </span>
      </div>
      <div class="ml-auto flex items-center text-gray-600">
        <i class="fas fa-newspaper mr-2"></i>
        <span class="font-semibold text-gray-900"><%= posts.size %></span>
        <span class="ml-1">tweets</span>
      </div>
    </div>
  </div>

  <!-- Entries Table -->
  <div class="overflow-hidden rounded-lg border border-gray-200">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
              <i class="fab fa-twitter mr-1"></i> Tweet
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
              <i class="fas fa-tags mr-1"></i> Etiquetas
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
              <i class="fas fa-user mr-1"></i> Perfil
            </th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider">
              <i class="fas fa-chart-line mr-1"></i> Interacciones
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% posts.each do |post| %>
            <tr class="hover:bg-sky-50 transition-colors duration-150">
              <td class="px-6 py-4">
                <% if post.tweet_url.present? %>
                  <%= link_to post.tweet_url, target: '_blank', class: 'group inline-flex items-start' do %>
                    <div class="flex-1">
                      <p class="text-sm font-medium text-gray-900 group-hover:text-sky-600 transition-colors line-clamp-3">
                        <%= post.text.to_s.truncate(200) %>
                      </p>
                      <div class="mt-1 flex items-center text-xs text-gray-500">
                        <i class="fas fa-clock mr-1"></i>
                        <span><%= post.posted_at.strftime('%d/%m/%Y %H:%M') %></span>
                      </div>
                    </div>
                    <i class="fas fa-arrow-up-right-from-square text-gray-400 group-hover:text-sky-600 ml-2 mt-1 transition-colors"></i>
                  <% end %>
                <% else %>
                  <p class="text-sm font-medium text-gray-900 line-clamp-3"><%= post.text.to_s.truncate(200) %></p>
                  <div class="mt-1 text-xs text-gray-500">
                    <i class="fas fa-clock mr-1"></i>
                    <%= post.posted_at.strftime('%d/%m/%Y %H:%M') %>
                  </div>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <div class="flex flex-wrap gap-1 max-w-xs">
                  <% post.tag_list.first(3).each do |tag| %>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-sky-100 text-sky-800 hover:bg-sky-200 transition-colors">
                      <%= tag %>
                    </span>
                  <% end %>
                  <% if post.tag_list.count > 3 %>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                      +<%= post.tag_list.count - 3 %>
                    </span>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-8 w-8 rounded-full overflow-hidden bg-white border border-gray-200">
                    <% if post.twitter_profile.present? && post.twitter_profile.site.present? && post.twitter_profile.site.image64.present? %>
                      <%= image_tag "data:image/jpeg;base64,#{post.twitter_profile.site.image64}", 
                          alt: post.twitter_profile.name,
                          class: "h-full w-full object-cover" %>
                    <% else %>
                      <div class="h-full w-full bg-gradient-to-br from-sky-400 to-blue-500 flex items-center justify-center">
                        <span class="text-white text-xs font-bold">
                          <%= post.twitter_profile&.username&.first&.upcase || 'X' %>
                        </span>
                      </div>
                    <% end %>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-gray-900">@<%= post.twitter_profile&.username || 'unknown' %></p>
                    <% if post.twitter_profile.present? && post.twitter_profile.site.present? %>
                      <p class="text-xs text-gray-500"><%= post.twitter_profile.site.name %></p>
                    <% end %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <div class="text-sm font-bold text-gray-900 bg-sky-100 px-3 py-1 rounded-full inline-flex">
                  <%= number_with_delimiter(post.total_interactions, delimiter: '.') %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <% if posts.empty? %>
    <div class="text-center py-12">
      <i class="fab fa-twitter text-gray-400 text-5xl mb-4"></i>
      <p class="text-gray-500 text-lg">No se encontraron tweets para esta fecha</p>
    </div>
  <% end %>
</div>
