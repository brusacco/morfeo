<!-- Tags -->
<section id="tags" class="space-y-6">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">
      <i class="fa-solid fa-tags text-blue-600 mr-2"></i>
      Etiquetas relacionadas
    </h2>
    <% if tag_counts.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-lg font-semibold text-gray-700 mb-4">Top Tags por Tweets</h3>
          <% tag_counts.take(10).each do |tag| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg mb-2 hover:bg-blue-50 transition-colors group">
              <div class="flex items-center space-x-3 flex-1 min-w-0">
                <div class="flex-shrink-0 w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
                  <i class="fa-solid fa-tag text-blue-600"></i>
                </div>
                <div class="flex-1 truncate">
                  <h3 class="truncate text-sm font-medium text-gray-900"><%= tag.name %></h3>
                </div>
              </div>
              <span class="font-bold text-blue-600"><%= number_with_delimiter(tag.count) %></span>
            </div>
          <% end %>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-gray-700 mb-4">Top Tags por Interacciones</h3>
          <% tag_interactions.sort_by { |_, interactions| -interactions }.take(10).each do |tag_name, interactions| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg mb-2 hover:bg-green-50 transition-colors group">
              <div class="flex items-center space-x-3 flex-1 min-w-0">
                <div class="flex-shrink-0 w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
                  <i class="fa-solid fa-tag text-green-600"></i>
                </div>
                <div class="flex-1 truncate">
                  <h3 class="truncate text-sm font-medium text-gray-900"><%= tag_name %></h3>
                </div>
              </div>
              <span class="font-bold text-green-600"><%= number_with_delimiter(interactions) %></span>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No hay datos de etiquetas disponibles.</p>
    <% end %>
  </div>
</section>

