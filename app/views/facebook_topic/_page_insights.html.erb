<!-- Pages -->
<section id="pages-list" class="space-y-6">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">
      <i class="fa-brands fa-facebook text-indigo-600 mr-2"></i>
      Cuentas que más han mencionado este tópico
    </h2>
    <% if pages_count.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-lg font-semibold text-gray-700 mb-4">Top Fanpages por Publicaciones</h3>
          <% pages_count.take(5).each do |page_data| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg mb-2 hover:bg-indigo-50 transition-colors group">
              <div class="flex items-center space-x-3 flex-1 min-w-0">
                <% if page_data[:page]&.picture.present? %>
                  <%= image_tag page_data[:page].picture, class: 'h-10 w-10 flex-shrink-0 rounded-full bg-gray-300', alt: page_data[:name] %>
                <% else %>
                  <img class="h-10 w-10 flex-shrink-0 rounded-full bg-gray-300" src="https://placehold.co/300x300" alt="">
                <% end %>
                <div class="flex-1 truncate">
                  <h3 class="truncate text-sm font-medium text-gray-900"><%= page_data[:name] %></h3>
                  <% if page_data[:page]&.username.present? %>
                    <p class="truncate text-xs text-gray-500">@<%= page_data[:page].username %></p>
                  <% end %>
                </div>
              </div>
              <span class="font-bold text-indigo-600"><%= number_with_delimiter(page_data[:count]) %></span>
            </div>
          <% end %>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-gray-700 mb-4">Top Fanpages por Interacciones</h3>
          <% pages_interactions.take(5).each do |page_data| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg mb-2 hover:bg-green-50 transition-colors group">
              <div class="flex items-center space-x-3 flex-1 min-w-0">
                <% if page_data[:page]&.picture.present? %>
                  <%= image_tag page_data[:page].picture, class: 'h-10 w-10 flex-shrink-0 rounded-full bg-gray-300', alt: page_data[:name] %>
                <% else %>
                  <img class="h-10 w-10 flex-shrink-0 rounded-full bg-gray-300" src="https://placehold.co/300x300" alt="">
                <% end %>
                <div class="flex-1 truncate">
                  <h3 class="truncate text-sm font-medium text-gray-900"><%= page_data[:name] %></h3>
                  <% if page_data[:page]&.username.present? %>
                    <p class="truncate text-xs text-gray-500">@<%= page_data[:page].username %></p>
                  <% end %>
                </div>
              </div>
              <span class="font-bold text-green-600"><%= number_with_delimiter(page_data[:interactions]) %></span>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No hay datos de fanpages disponibles.</p>
    <% end %>
  </div>
</section>

