<div class="group relative rounded-lg border border-gray-200 bg-white hover:shadow-lg transition-shadow duration-200 flex flex-col h-full min-h-[420px]">
  <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-t-lg bg-gray-50 flex-shrink-0">
    <% if facebook_entry.attachment_media_src.present? %>
      <%= image_tag facebook_entry.attachment_media_src, 
        loading: 'lazy', 
        onerror: "this.onerror=null;this.src='#{asset_path('default-entry.svg')}';", 
        class: 'h-full w-full object-cover object-center group-hover:opacity-90 transition-opacity',
        alt: "Imagen de publicación: #{facebook_entry.message.to_s.truncate(50)}" %>
    <% else %>
      <div class="h-full w-full flex items-center justify-center bg-gradient-to-br from-indigo-50 to-purple-50">
        <i class="fa-brands fa-facebook text-6xl text-indigo-300"></i>
      </div>
    <% end %>
  </div>
  <div class="p-4 flex flex-col flex-grow min-h-0">
    <div class="mb-3 flex-shrink-0">
      <% if facebook_entry.permalink_url.present? %>
        <%= link_to facebook_entry.permalink_url, target: '_blank', rel: 'noopener noreferrer',
            class: 'text-sm font-medium text-gray-900 hover:text-indigo-600 line-clamp-3 block visited:text-purple-600',
            'aria-label': "Ver publicación: #{facebook_entry.message.to_s.truncate(50)}" do %>
          <%= facebook_entry.message.to_s.truncate(120) %>
          <i class="fa-solid fa-external-link text-xs text-gray-400 ml-1" aria-hidden="true"></i>
        <% end %>
      <% else %>
        <p class="text-sm text-gray-900 line-clamp-3"><%= facebook_entry.message.to_s.truncate(120) %></p>
      <% end %>
    </div>
    <div class="space-y-2 flex-grow min-h-0 mb-3">
      <div class="flex items-center text-xs text-gray-600">
        <i class="fa-solid fa-building mr-1.5 text-gray-400" aria-hidden="true"></i>
        <span class="font-medium"><%= facebook_entry.page.name %></span>
      </div>
      <div class="flex items-center justify-between text-xs text-gray-500">
        <div class="flex items-center">
          <i class="fa-regular fa-calendar mr-1.5" aria-hidden="true"></i>
          <time datetime="<%= facebook_entry.posted_at.iso8601 %>" 
                class="hover:text-gray-700 transition-colors">
            <%= facebook_entry.posted_at.strftime('%d/%m/%Y') %>
          </time>
        </div>
      </div>
      <% if facebook_entry.tag_list.any? %>
        <div class="flex flex-wrap gap-1 pt-2 pb-2 border-t border-gray-100"
             <% if facebook_entry.tag_list.size > 2 %>
               title="Todas las etiquetas: <%= facebook_entry.tag_list.join(', ') %>"
             <% end %>>
          <% facebook_entry.tag_list.first(2).each do |tag| %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-700">
              <%= tag %>
            </span>
          <% end %>
          <% if facebook_entry.tag_list.size > 2 %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-500 cursor-help"
                  title="<%= facebook_entry.tag_list[2..-1].join(', ') %>">
              +<%= facebook_entry.tag_list.size - 2 %> más
            </span>
          <% end %>
        </div>
      <% end %>
      <% if facebook_entry.entry.present? %>
        <div class="pt-2 pb-2 border-t border-gray-100">
          <%= link_to facebook_entry.entry.url, 
              target: '_blank',
              rel: 'noopener noreferrer',
              class: "inline-flex items-center px-3 py-1.5 rounded-md text-xs font-medium bg-gradient-to-r from-emerald-50 to-teal-50 text-emerald-700 border border-emerald-200 hover:from-emerald-100 hover:to-teal-100 hover:border-emerald-300 hover:shadow-sm transition-all duration-200 group/link w-full justify-center",
              title: "Ver noticia relacionada: #{facebook_entry.entry.title.to_s.truncate(60)}" do %>
            <i class="fa-solid fa-newspaper text-emerald-600 mr-1.5 group-hover/link:scale-110 transition-transform" aria-hidden="true"></i>
            <span class="font-semibold">Noticia vinculada</span>
            <i class="fa-solid fa-external-link text-emerald-500 ml-1.5 group-hover/link:translate-x-1 transition-transform text-xs" aria-hidden="true"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="mt-auto pt-4 border-t border-gray-200 flex-shrink-0">
      <div class="grid grid-cols-5 gap-2 text-center">
        <div class="group/metric" role="group" aria-label="Reacciones: <%= number_with_delimiter(facebook_entry.reactions_total_count) %>">
          <div class="text-xs text-gray-500 mb-1">
            <i class="fa-solid fa-thumbs-up text-blue-600" aria-hidden="true"></i>
            <span class="sr-only">Reacciones</span>
          </div>
          <div class="text-sm font-semibold text-blue-600 group-hover/metric:scale-110 transition-transform">
            <%= number_with_delimiter(facebook_entry.reactions_total_count) %>
          </div>
        </div>
        <div class="group/metric" role="group" aria-label="Comentarios: <%= number_with_delimiter(facebook_entry.comments_count) %>">
          <div class="text-xs text-gray-500 mb-1">
            <i class="fa-solid fa-comment text-green-600" aria-hidden="true"></i>
            <span class="sr-only">Comentarios</span>
          </div>
          <div class="text-sm font-semibold text-green-600 group-hover/metric:scale-110 transition-transform">
            <%= number_with_delimiter(facebook_entry.comments_count) %>
          </div>
        </div>
        <div class="group/metric" role="group" aria-label="Compartidos: <%= number_with_delimiter(facebook_entry.share_count) %>">
          <div class="text-xs text-gray-500 mb-1">
            <i class="fa-solid fa-share text-purple-600" aria-hidden="true"></i>
            <span class="sr-only">Compartidos</span>
          </div>
          <div class="text-sm font-semibold text-purple-600 group-hover/metric:scale-110 transition-transform">
            <%= number_with_delimiter(facebook_entry.share_count) %>
          </div>
        </div>
        <div class="group/metric" role="group" aria-label="Vistas: <%= number_with_delimiter(facebook_entry.views_count) %>">
          <div class="text-xs text-gray-500 mb-1">
            <i class="fa-solid fa-eye text-amber-600" aria-hidden="true"></i>
            <span class="sr-only">Vistas</span>
          </div>
          <div class="text-sm font-semibold text-amber-600 group-hover/metric:scale-110 transition-transform">
            <%= number_with_delimiter(facebook_entry.views_count) %>
          </div>
        </div>
        <div class="group/metric" role="group" aria-label="Total: <%= number_with_delimiter(facebook_entry.total_interactions) %>">
          <div class="text-xs text-gray-500 mb-1">
            <i class="fa-solid fa-chart-line text-indigo-600" aria-hidden="true"></i>
            <span class="sr-only">Total</span>
          </div>
          <div class="text-sm font-bold text-indigo-600 bg-indigo-50 rounded px-1 py-0.5 group-hover/metric:scale-110 transition-transform">
            <%= number_with_delimiter(facebook_entry.total_interactions) %>
          </div>
        </div>
      </div>
    </div>
    <!-- Sentiment Badge -->
    <% if facebook_entry.sentiment_score.present? %>
      <div class="mt-3 pt-3 border-t border-gray-200">
        <div class="flex items-center justify-between">
          <span class="text-xs text-gray-500">Sentimiento:</span>
          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium border <%= facebook_entry.sentiment_color %>">
            <%= facebook_entry.sentiment_text %>
            <span class="ml-1.5 font-bold"><%= number_with_precision(facebook_entry.sentiment_score, precision: 1) %></span>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</div>
