<div class="flex flex-col p-4 space-y-4">
  <div class="flex justify-between items-center mb-4">
    <div>
      <span class="font-semibold">Fecha:</span> <%= entries_date.strftime('%d/%m/%Y') %> |
      <span class="font-semibold">Tópico:</span> <%= topic_name %> |
      <span class="font-semibold">Origen:</span> Facebook
    </div>

    <button type="button"
            class="inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm"
            data-action="modal#closeModal">
      Cerrar
    </button>
  </div>

  <div class="flex flex-col space-y-2">
    <div class="grid grid-cols-12 bg-gray-200 text-gray-600 uppercase text-sm leading-normal font-semibold">
      <div class="col-span-4 py-3 px-4 text-left">Publicación</div>
      <div class="col-span-3 py-3 px-4 text-left">Fanpage</div>
      <div class="col-span-2 py-3 px-4 text-left">Reacciones</div>
      <div class="col-span-1 py-3 px-4 text-left">Comentarios</div>
      <div class="col-span-1 py-3 px-4 text-left">Compartidos</div>
      <div class="col-span-1 py-3 px-4 text-left text-indigo-600">Total</div>
    </div>

    <div class="flex flex-col divide-y divide-gray-100">
      <% entries.each do |entry| %>
        <div class="grid grid-cols-12 px-4 py-3 bg-white hover:bg-indigo-50 transition-colors">
          <div class="col-span-4 flex flex-col space-y-1">
            <% if entry.permalink_url.present? %>
              <%= link_to entry.message.to_s.truncate(120), entry.permalink_url, target: '_blank', rel: 'noopener', class: 'text-sm font-medium text-indigo-600 hover:text-indigo-800' %>
            <% else %>
              <span class="text-sm font-medium text-gray-800"><%= entry.message.to_s.truncate(120) %></span>
            <% end %>
            <span class="text-xs text-gray-500"><%= entry.posted_at.strftime('%d/%m/%Y %H:%M') %></span>
          </div>
          <div class="col-span-3 flex flex-col text-sm text-gray-700">
            <span class="font-medium text-gray-900"><%= entry.page.name %></span>
            <% if entry.page.site.present? %>
              <span class="text-xs text-gray-500"><%= entry.page.site.name %></span>
            <% end %>
          </div>
          <div class="col-span-2 flex items-center text-sm font-semibold text-blue-600">
            <%= number_with_delimiter(entry.reactions_total_count) %>
          </div>
          <div class="col-span-1 flex items-center text-sm font-semibold text-green-600">
            <%= number_with_delimiter(entry.comments_count) %>
          </div>
          <div class="col-span-1 flex items-center text-sm font-semibold text-purple-600">
            <%= number_with_delimiter(entry.share_count) %>
          </div>
          <div class="col-span-1 flex items-center text-sm font-bold text-indigo-700">
            <%= number_with_delimiter(entry.total_interactions) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>