<div class="space-y-4">
  <!-- Filter/Context Bar -->
  <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg p-4 border border-blue-100">
    <div class="flex flex-wrap items-center gap-4 text-sm">
      <div class="flex items-center">
        <i class="fas fa-calendar-day text-blue-600 mr-2"></i>
        <span class="font-medium text-gray-700">Fecha:</span>
        <span class="ml-1 text-gray-900 font-semibold"><%= entries_date.strftime("%d/%m/%Y") %></span>
      </div>
      <div class="h-4 w-px bg-blue-200"></div>
      <div class="flex items-center">
        <i class="fas fa-tag text-blue-600 mr-2"></i>
        <span class="font-medium text-gray-700">Tópico:</span>
        <span class="ml-1 text-gray-900 font-semibold"><%= topic_name %></span>
      </div>
      <div class="h-4 w-px bg-blue-200"></div>
      <div class="flex items-center">
        <i class="fab fa-facebook text-blue-600 mr-2"></i>
        <span class="ml-1 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
          Facebook
        </span>
      </div>
      <div class="ml-auto flex items-center text-gray-600">
        <i class="fas fa-newspaper mr-2"></i>
        <span class="font-semibold text-gray-900"><%= entries.size %></span>
        <span class="ml-1">publicaciones</span>
      </div>
    </div>
  </div>

  <!-- Entries Table -->
  <div class="overflow-hidden rounded-lg border border-gray-200">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
              <i class="fab fa-facebook-square mr-1"></i> Publicación
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
              <i class="fas fa-tags mr-1"></i> Etiquetas
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
              <i class="fas fa-building mr-1"></i> Fanpage
            </th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider">
              <i class="fas fa-heart mr-1"></i> Interacciones
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% entries.each do |entry| %>
            <tr class="hover:bg-blue-50 transition-colors duration-150">
              <td class="px-6 py-4">
                <% if entry.permalink_url.present? %>
                  <%= link_to entry.permalink_url, target: '_blank', class: 'group inline-flex items-start' do %>
                    <div class="flex-1">
                      <p class="text-sm font-medium text-gray-900 group-hover:text-blue-600 transition-colors line-clamp-2">
                        <%= entry.message.to_s.truncate(150) %>
                      </p>
                      <div class="mt-1 flex items-center text-xs text-gray-500">
                        <i class="fas fa-clock mr-1"></i>
                        <span><%= entry.posted_at.strftime('%d/%m/%Y %H:%M') %></span>
                      </div>
                    </div>
                    <i class="fas fa-arrow-up-right-from-square text-gray-400 group-hover:text-blue-600 ml-2 mt-1 transition-colors"></i>
                  <% end %>
                <% else %>
                  <p class="text-sm font-medium text-gray-900 line-clamp-2"><%= entry.message.to_s.truncate(150) %></p>
                  <div class="mt-1 text-xs text-gray-500">
                    <i class="fas fa-clock mr-1"></i>
                    <%= entry.posted_at.strftime('%d/%m/%Y %H:%M') %>
                  </div>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <div class="flex flex-wrap gap-1 max-w-xs">
                  <% entry.tag_list.first(3).each do |tag| %>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 hover:bg-blue-200 transition-colors">
                      <%= tag %>
                    </span>
                  <% end %>
                  <% if entry.tag_list.count > 3 %>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                      +<%= entry.tag_list.count - 3 %>
                    </span>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-8 w-8 rounded-full overflow-hidden bg-white border border-gray-200">
                    <% if entry.page.site.present? && entry.page.site.image64.present? %>
                      <%= image_tag "data:image/jpeg;base64,#{entry.page.site.image64}", 
                          alt: entry.page.name,
                          class: "h-full w-full object-cover" %>
                    <% else %>
                      <div class="h-full w-full bg-gradient-to-br from-blue-400 to-indigo-500 flex items-center justify-center">
                        <span class="text-white text-xs font-bold"><%= entry.page.name[0].upcase %></span>
                      </div>
                    <% end %>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-gray-900"><%= entry.page.name %></p>
                    <% if entry.page.site.present? %>
                      <p class="text-xs text-gray-500"><%= entry.page.site.name %></p>
                    <% end %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <div class="text-sm font-bold text-gray-900 bg-blue-100 px-3 py-1 rounded-full inline-flex">
                  <%= number_with_delimiter(entry.total_interactions, delimiter: '.') %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <% if entries.empty? %>
    <div class="text-center py-12">
      <i class="fab fa-facebook text-gray-400 text-5xl mb-4"></i>
      <p class="text-gray-500 text-lg">No se encontraron publicaciones para esta fecha</p>
    </div>
  <% end %>
</div>