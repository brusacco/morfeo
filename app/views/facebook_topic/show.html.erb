<script>
  // Simple back to top functionality
  document.addEventListener('DOMContentLoaded', function() {
    const backToTopLink = document.getElementById('backToTop');
    if (backToTopLink) {
      backToTopLink.addEventListener('click', function(e) {
        e.preventDefault();
        document.documentElement.scrollTop = 0;
        document.body.scrollTop = 0;
      });
    }
  });
  
  document.addEventListener('turbo:load', function() {
    const backToTopLink = document.getElementById('backToTop');
    if (backToTopLink) {
      backToTopLink.addEventListener('click', function(e) {
        e.preventDefault();
        document.documentElement.scrollTop = 0;
        document.body.scrollTop = 0;
      });
    }
  });
</script>

<main class="bg-gray-50 min-h-screen">
  <div class="mx-auto py-8 px-4 sm:px-6 lg:px-8 space-y-8">
    <!-- KPI cards -->
    <section id="kpis">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg hover:border-indigo-300 transition-all duration-200 cursor-default group">
          <div class="flex items-center justify-between mb-2">
            <div class="text-sm font-medium text-gray-500 uppercase tracking-wide">Publicaciones</div>
            <div class="p-2 bg-gray-100 rounded-lg group-hover:bg-indigo-100 transition-colors">
              <i class="fa-brands fa-facebook text-gray-600 group-hover:text-indigo-600 transition-colors" aria-hidden="true"></i>
            </div>
          </div>
          <div class="mt-2 text-3xl font-bold text-gray-900 group-hover:text-indigo-600 transition-colors">
            <%= number_with_delimiter(@total_posts) %>
          </div>
          <p class="mt-2 text-sm text-gray-500">Publicaciones tagged con este tópico en los últimos <%= DAYS_RANGE %> días.</p>
        </div>
        
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg hover:border-indigo-300 transition-all duration-200 cursor-default group">
          <div class="flex items-center justify-between mb-2">
            <div class="text-sm font-medium text-gray-500 uppercase tracking-wide">Interacciones</div>
            <div class="p-2 bg-indigo-100 rounded-lg group-hover:bg-indigo-200 transition-colors">
              <i class="fa-solid fa-chart-line text-indigo-600 group-hover:text-indigo-700 transition-colors" aria-hidden="true"></i>
            </div>
          </div>
          <div class="mt-2 text-3xl font-bold text-indigo-600 group-hover:scale-105 transition-transform">
            <%= number_with_delimiter(@total_interactions) %>
          </div>
          <p class="mt-2 text-sm text-gray-500">Likes + Comentarios + Compartidos.</p>
        </div>
        
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg hover:border-purple-300 transition-all duration-200 cursor-default group">
          <div class="flex items-center justify-between mb-2">
            <div class="text-sm font-medium text-gray-500 uppercase tracking-wide">Vistas</div>
            <div class="p-2 bg-purple-100 rounded-lg group-hover:bg-purple-200 transition-colors">
              <i class="fa-solid fa-eye text-purple-600 group-hover:text-purple-700 transition-colors" aria-hidden="true"></i>
            </div>
          </div>
          <div class="mt-2 text-3xl font-bold text-purple-600 group-hover:scale-105 transition-transform">
            <%= number_with_delimiter(@total_views) %>
          </div>
          <p class="mt-2 text-sm text-gray-500">Estimación de vistas totales basada en engagement.</p>
        </div>
        
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg hover:border-green-300 transition-all duration-200 cursor-default group">
          <div class="flex items-center justify-between mb-2">
            <div class="text-sm font-medium text-gray-500 uppercase tracking-wide">Promedio</div>
            <div class="p-2 bg-green-100 rounded-lg group-hover:bg-green-200 transition-colors">
              <i class="fa-solid fa-calculator text-green-600 group-hover:text-green-700 transition-colors" aria-hidden="true"></i>
            </div>
          </div>
          <div class="mt-2 text-3xl font-bold text-green-600 group-hover:scale-105 transition-transform">
            <%= number_with_delimiter(@average_interactions) %>
          </div>
          <p class="mt-2 text-sm text-gray-500">Interacciones promedio por publicación.</p>
        </div>
      </div>
    </section>
    
    <!-- TEMPORAL INTELLIGENCE SECTION -->
    <%= render 'temporal_intelligence' %>
    
    <!-- Charts -->
    <section id="charts">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">
        <i class="fa-solid fa-chart-line text-indigo-600 mr-2"></i>
        Evolución temporal
      </h2>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-medium text-gray-900">Publicaciones por día</h3>
            <span class="text-sm text-gray-500">Últimos <%= DAYS_RANGE %> días</span>
          </div>
          <div class="w-full overflow-hidden"
               data-controller="topics"
               data-topics-id-value="facebookPostsChart"
               data-topics-url-value="<%= entries_data_facebook_topics_path %>"
               data-topics-topic-id-value="<%= @topic.id %>"
               data-topics-title-value="false">
            <%= column_chart @chart_posts, xtitle: 'Fecha', ytitle: 'Publicaciones', label: 'Publicaciones',
                  id: 'facebookPostsChart', adapter: 'highcharts', library: { plotOptions: { series: { dataLabels: { enabled: true } } } },
                  colors: ['#3B82F6'], thousands: '.' %>
            <%= render 'home/modal', graph_id: 'facebookPostsChart', controller_name: 'topics' %>
          </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-medium text-gray-900">Interacciones por día</h3>
            <span class="text-sm text-gray-500">Total diario</span>
          </div>
          <div class="w-full overflow-hidden"
               data-controller="topics"
               data-topics-id-value="facebookInteractionsChart"
               data-topics-url-value="<%= entries_data_facebook_topics_path %>"
               data-topics-topic-id-value="<%= @topic.id %>"
               data-topics-title-value="false">
            <%= column_chart @chart_interactions, xtitle: 'Fecha', ytitle: 'Interacciones', label: 'Interacciones',
                  id: 'facebookInteractionsChart', adapter: 'highcharts', library: { plotOptions: { series: { dataLabels: { enabled: true } } } },
                  colors: ['#10B981'], thousands: '.' %>
            <%= render 'home/modal', graph_id: 'facebookInteractionsChart', controller_name: 'topics' %>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Tag insights -->
    <section id="tags">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">
        <i class="fa-solid fa-tags text-blue-600 mr-2"></i>
        Etiquetas relacionadas
      </h2>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Cantidad de publicaciones por etiqueta</h3>
          <%= pie_chart @tag_counts.map { |tag| [tag.name, tag.count] }.to_h, donut: true, suffix: '%', colors: ['#6366F1', '#8B5CF6', '#EC4899', '#14B8A6', '#F59E0B'] %>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Interacciones por etiqueta</h3>
          <%= pie_chart @tag_interactions, donut: true, suffix: '%', colors: ['#2563EB', '#7C3AED', '#D97706', '#0EA5E9', '#EF4444'] %>
        </div>
      </div>
    </section>
    
    <% if @word_occurrences.any? %>
      <section class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-gray-900">Nube de Palabras - Publicaciones</h2>
          <div class="flex items-center space-x-4">
            <div class="flex items-center text-xs text-gray-600">
              <span class="inline-block w-3 h-3 rounded-full bg-green-500 mr-1.5"></span>
              <span>Positivas</span>
            </div>
            <div class="flex items-center text-xs text-gray-600">
              <span class="inline-block w-3 h-3 rounded-full bg-gray-500 mr-1.5"></span>
              <span>Neutrales</span>
            </div>
            <div class="flex items-center text-xs text-gray-600">
              <span class="inline-block w-3 h-3 rounded-full bg-red-500 mr-1.5"></span>
              <span>Negativas</span>
            </div>
          </div>
        </div>
        <div>
          <ul class="cloud">
            <% prepare_word_cloud_data(@word_occurrences, @positive_words, @negative_words).each do |word_data| %>
              <li style='color: <%= word_data[:color] %>' 
                  data-weight="<%= word_data[:weight] %>"
                  data-sentiment="<%= word_data[:sentiment] || 'neutral' %>">
                <%= word_data[:word] %>
              </li>
            <% end %>
          </ul>
        </div>
      </section>
    <% end %>
    
    <!-- Sentiment Analysis Section -->
    <% if @sentiment_summary %>
      <section id="sentiment" class="mb-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">
          <i class="fa-solid fa-heart-pulse text-purple-600 mr-2"></i>
          Análisis de Sentimiento
        </h2>
        
        <!-- Overview Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
          <!-- Average Sentiment -->
          <div class="bg-gradient-to-br from-purple-50 to-indigo-50 rounded-xl border border-purple-200 p-6">
            <h3 class="text-sm font-medium text-gray-600 mb-3">Sentimiento Promedio</h3>
            <div class="flex items-center justify-between">
              <div class="text-4xl font-bold <%= sentiment_score_color(@sentiment_summary[:average_sentiment]) %>">
                <%= number_with_precision(@sentiment_summary[:average_sentiment], precision: 2) %>
              </div>
              <div class="text-5xl"><%= sentiment_emoji(@sentiment_summary[:average_sentiment]) %></div>
            </div>
            <p class="text-xs text-gray-500 mt-3">-2.0 (muy negativo) a +2.0 (muy positivo)</p>
            <% if @sentiment_summary[:statistical_validity] %>
              <% validity = @sentiment_summary[:statistical_validity] %>
              <div class="mt-3 pt-3 border-t border-purple-200">
                <div class="flex items-center justify-between text-xs">
                  <span class="text-gray-600">Confianza:</span>
                  <span class="font-semibold <%= validity[:overall_confidence] > 0.7 ? 'text-green-600' : 'text-amber-600' %>">
                    <%= (validity[:overall_confidence] * 100).round %>%
                  </span>
                </div>
                <div class="flex items-center justify-between text-xs mt-1">
                  <span class="text-gray-600">Reacciones:</span>
                  <span class="font-semibold text-purple-600">
                    <%= number_with_delimiter(validity[:total_reactions]) %>
                  </span>
                </div>
              </div>
            <% end %>
          </div>
          
          <!-- Trend -->
          <% if @sentiment_trend %>
            <div class="bg-white rounded-xl border border-gray-200 p-6">
              <h3 class="text-sm font-medium text-gray-600 mb-3">Tendencia (24h)</h3>
              <div class="text-3xl font-bold <%= sentiment_score_color(@sentiment_trend[:recent_score]) %>">
                <%= "%+.1f" % @sentiment_trend[:change_percent] %>%
              </div>
              <div class="flex items-center mt-3 text-sm">
                <%= sentiment_trend_icon(@sentiment_trend[:direction]) %>
                <span class="ml-2 text-gray-700 capitalize"><%= @sentiment_trend[:trend] %></span>
              </div>
            </div>
          <% end %>
          
          <!-- Controversial -->
          <div class="bg-white rounded-xl border border-gray-200 p-6">
            <h3 class="text-sm font-medium text-gray-600 mb-3">Posts Controversiales</h3>
            <div class="text-3xl font-bold text-amber-600">
              <%= @controversial_posts.size %>
            </div>
            <p class="text-xs text-gray-500 mt-3">Alto balance positivo/negativo</p>
          </div>
        </div>
        
        <!-- Charts Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
          <!-- Sentiment Over Time -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Evolución del Sentimiento</h3>
            <%= line_chart @sentiment_over_time, 
                colors: ['#8b5cf6'], 
                min: -2, 
                max: 2,
                download: false,
                library: { 
                  chart: { height: 300 },
                  plotOptions: { 
                    series: { 
                      lineWidth: 3,
                      marker: { radius: 4 }
                    } 
                  }
                } %>
          </div>
          
          <!-- Distribution Pie -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Distribución</h3>
            <%= pie_chart prepare_sentiment_pie_data(@sentiment_distribution),
                donut: true,
                colors: ['#10b981', '#84cc16', '#94a3b8', '#f97316', '#ef4444'],
                download: false,
                library: { chart: { height: 300 } } %>
          </div>
        </div>
        
        <!-- Reaction Breakdown -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">
            <i class="fa-solid fa-chart-bar text-indigo-600 mr-2"></i>
            Desglose de Reacciones
          </h3>
          <%= column_chart prepare_reaction_breakdown(@reaction_breakdown),
              colors: ['#ec4899', '#f59e0b', '#8b5cf6', '#3b82f6', '#10b981', '#6366f1', '#ef4444'],
              download: false,
              library: { chart: { height: 300 } } %>
        </div>
        
        <!-- Top Posts by Sentiment -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
          <!-- Positive Posts -->
          <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl border border-green-200 p-6">
            <h3 class="text-lg font-medium text-green-900 mb-4">
              <i class="fa-solid fa-smile text-green-600 mr-2"></i>
              Más Positivas
            </h3>
            <% if @top_positive_posts.present? && @top_positive_posts.any? %>
              <div class="space-y-3">
                <% @top_positive_posts.first(3).each do |post| %>
                    <div class="bg-white rounded-lg border border-green-200 p-3">
                      <%= link_to post.permalink_url, target: '_blank', rel: 'noopener',
                          class: 'text-sm text-gray-900 hover:text-green-600 line-clamp-2 block mb-2' do %>
                        <%= post.message.to_s.truncate(80) %>
                        <i class="fa-solid fa-external-link text-xs ml-1"></i>
                      <% end %>
                      <div class="flex items-center justify-between text-xs mb-2">
                        <span class="text-gray-600"><%= post.page.name %></span>
                        <span class="font-bold text-green-700">
                          <%= sentiment_emoji(post.sentiment_score) %>
                          <%= number_with_precision(post.sentiment_score, precision: 1) %>
                        </span>
                      </div>
                      <!-- Reaction Breakdown -->
                      <div class="pt-2 border-t border-green-100">
                        <div class="flex items-center justify-between text-xs text-gray-600">
                          <div class="flex items-center gap-2 flex-wrap">
                            <% if post.reactions_love_count > 0 %>
                              <span class="inline-flex items-center gap-1">
                                <span>❤️</span>
                                <span class="font-medium"><%= post.reactions_love_count %></span>
                              </span>
                            <% end %>
                            <% if post.reactions_haha_count > 0 %>
                              <span class="inline-flex items-center gap-1">
                                <span>😂</span>
                                <span class="font-medium"><%= post.reactions_haha_count %></span>
                              </span>
                            <% end %>
                            <% if post.reactions_like_count > 0 %>
                              <span class="inline-flex items-center gap-1">
                                <span>👍</span>
                                <span class="font-medium"><%= post.reactions_like_count %></span>
                              </span>
                            <% end %>
                            <% if post.reactions_wow_count > 0 %>
                              <span class="inline-flex items-center gap-1">
                                <span>😮</span>
                                <span class="font-medium"><%= post.reactions_wow_count %></span>
                              </span>
                            <% end %>
                            <% if post.reactions_thankful_count > 0 %>
                              <span class="inline-flex items-center gap-1">
                                <span>🙏</span>
                                <span class="font-medium"><%= post.reactions_thankful_count %></span>
                              </span>
                            <% end %>
                            <% if post.reactions_sad_count > 0 %>
                              <span class="inline-flex items-center gap-1 text-gray-500">
                                <span>😢</span>
                                <span class="font-medium"><%= post.reactions_sad_count %></span>
                              </span>
                            <% end %>
                            <% if post.reactions_angry_count > 0 %>
                              <span class="inline-flex items-center gap-1 text-gray-500">
                                <span>😡</span>
                                <span class="font-medium"><%= post.reactions_angry_count %></span>
                              </span>
                            <% end %>
                          </div>
                          <span class="text-gray-500">
                            Total: <%= post.reactions_total_count %>
                          </span>
                        </div>
                      </div>
                    </div>
                <% end %>
              </div>
            <% else %>
              <!-- Empty State for Positive Posts -->
              <div class="bg-white rounded-lg border border-green-200 p-8 text-center">
                <div class="w-16 h-16 mx-auto mb-4 bg-green-100 rounded-full flex items-center justify-center">
                  <i class="fa-solid fa-smile text-2xl text-green-600"></i>
                </div>
                <h4 class="text-sm font-medium text-gray-900 mb-2">Sin publicaciones positivas</h4>
                <p class="text-xs text-gray-500">No se encontraron publicaciones con sentimiento positivo en este período.</p>
              </div>
            <% end %>
          </div>
          
          <!-- Negative Posts -->
          <div class="bg-gradient-to-br from-red-50 to-rose-50 rounded-xl border border-red-200 p-6">
            <h3 class="text-lg font-medium text-red-900 mb-4">
              <i class="fa-solid fa-frown text-red-600 mr-2"></i>
              Más Negativas
            </h3>
            <% if @top_negative_posts.present? && @top_negative_posts.any? %>
              <div class="space-y-3">
                <% @top_negative_posts.first(3).each do |post| %>
                    <div class="bg-white rounded-lg border border-red-200 p-3">
                      <%= link_to post.permalink_url, target: '_blank', rel: 'noopener',
                          class: 'text-sm text-gray-900 hover:text-red-600 line-clamp-2 block mb-2' do %>
                        <%= post.message.to_s.truncate(80) %>
                        <i class="fa-solid fa-external-link text-xs ml-1"></i>
                      <% end %>
                      <div class="flex items-center justify-between text-xs mb-2">
                        <span class="text-gray-600"><%= post.page.name %></span>
                        <span class="font-bold text-red-700">
                          <%= sentiment_emoji(post.sentiment_score) %>
                          <%= number_with_precision(post.sentiment_score, precision: 1) %>
                        </span>
                      </div>
                      <!-- Reaction Breakdown -->
                      <div class="pt-2 border-t border-red-100">
                        <div class="flex items-center justify-between text-xs text-gray-600">
                          <div class="flex items-center gap-2 flex-wrap">
                            <% if post.reactions_angry_count > 0 %>
                              <span class="inline-flex items-center gap-1 text-red-600">
                                <span>😡</span>
                                <span class="font-semibold"><%= post.reactions_angry_count %></span>
                              </span>
                            <% end %>
                            <% if post.reactions_sad_count > 0 %>
                              <span class="inline-flex items-center gap-1 text-red-600">
                                <span>😢</span>
                                <span class="font-semibold"><%= post.reactions_sad_count %></span>
                              </span>
                            <% end %>
                            <% if post.reactions_love_count > 0 %>
                              <span class="inline-flex items-center gap-1 text-gray-500">
                                <span>❤️</span>
                                <span class="font-medium"><%= post.reactions_love_count %></span>
                              </span>
                            <% end %>
                            <% if post.reactions_haha_count > 0 %>
                              <span class="inline-flex items-center gap-1 text-gray-500">
                                <span>😂</span>
                                <span class="font-medium"><%= post.reactions_haha_count %></span>
                              </span>
                            <% end %>
                            <% if post.reactions_like_count > 0 %>
                              <span class="inline-flex items-center gap-1 text-gray-500">
                                <span>👍</span>
                                <span class="font-medium"><%= post.reactions_like_count %></span>
                              </span>
                            <% end %>
                            <% if post.reactions_wow_count > 0 %>
                              <span class="inline-flex items-center gap-1 text-gray-500">
                                <span>😮</span>
                                <span class="font-medium"><%= post.reactions_wow_count %></span>
                              </span>
                            <% end %>
                            <% if post.reactions_thankful_count > 0 %>
                              <span class="inline-flex items-center gap-1 text-gray-500">
                                <span>🙏</span>
                                <span class="font-medium"><%= post.reactions_thankful_count %></span>
                              </span>
                            <% end %>
                          </div>
                          <span class="text-gray-500">
                            Total: <%= post.reactions_total_count %>
                          </span>
                        </div>
                      </div>
                    </div>
                <% end %>
              </div>
            <% else %>
              <!-- Empty State for Negative Posts -->
              <div class="bg-white rounded-lg border border-red-200 p-8 text-center">
                <div class="w-16 h-16 mx-auto mb-4 bg-red-100 rounded-full flex items-center justify-center">
                  <i class="fa-solid fa-frown text-2xl text-red-600"></i>
                </div>
                <h4 class="text-sm font-medium text-gray-900 mb-2">Sin publicaciones negativas</h4>
                <p class="text-xs text-gray-500">No se encontraron publicaciones con sentimiento negativo en este período.</p>
              </div>
            <% end %>
          </div>
        </div>
      </section>
    <% end %>
    
    <!-- Word clouds -->
    <section class="space-y-6">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Palabras más frecuentes</h3>
        <%= render partial: 'tag/tag_pill_array', collection: @word_occurrences %>
      </div>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Bigramas más frecuentes</h3>
        <%= render partial: 'tag/tag_pill_array', collection: @bigram_occurrences %>
      </div>
    </section>
    
    <!-- Pages insights -->
    <section id="pages">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">
        <i class="fa-brands fa-facebook text-blue-600 mr-2"></i>
        Fanpages destacadas
      </h2>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Publicaciones por fanpage</h3>
          <%= pie_chart @pages_count, donut: true, colors: ['#2563EB', '#F97316', '#10B981', '#F59E0B', '#EC4899'] %>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Interacciones por fanpage</h3>
          <%= pie_chart @pages_interactions, donut: true, colors: ['#0EA5E9', '#6366F1', '#22C55E', '#D97706', '#EF4444'] %>
        </div>
      </div>
    </section>
    
    <!-- Top Media Sources Section -->
    <section class="mb-8">
      <%= render partial: 'site/sites', locals: { sites: @site_top_counts, title: 'Cuentas que mas han mencionado este tópico fueron:' } %>
    </section>
    
    <!-- All posts -->
    <section id="posts">
      <%= render partial: 'facebook_topic/posts_table', locals: { entries: @entries, title: "Todas las publicaciones etiquetadas con #{@topic.name}" } %>
    </section>
    
    <!-- Top posts cards -->
    <section>
      <%= render partial: 'facebook_topic/facebook_entries', locals: { facebook_entries: @top_posts, title: 'Publicaciones con más interacciones' } %>
    </section>
  </div>
</main>
