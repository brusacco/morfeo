<div class="container mx-auto px-4 py-6">
  <!-- Botón para crear nuevo reporte -->
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-semibold">Reportes</h1>
    <%= link_to 'Crear Nuevo Reporte', new_report_path, class: "bg-indigo-600 text-white hover:bg-indigo-700 font-semibold py-2 px-4 rounded-lg shadow-md" %>
  </div>

  <!-- Lista de reportes -->
  <% if @reports.present? %>
    <div class="overflow-x-auto bg-white shadow-md rounded-lg">
      <table class="min-w-full table-auto">
        <thead>
          <tr class="bg-indigo-100 text-left text-sm font-medium text-gray-700">
            <th class="px-4 py-2">Título</th>
            <th class="px-4 py-2">Tópico</th>
            <th class="px-4 py-2">Fecha</th>
            <th class="px-4 py-2">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @reports.each do |report| %>
            <tr class="border-b">
              <td class="px-4 py-2"><%= report.title %></td>
              <td class="px-4 py-2"><%= report.topic&.name || 'Sin Tópico' %></td>
              <td class="px-4 py-2"><%= report.date.strftime('%d/%m/%Y') if report.date.present? %></td>
              <td class="px-4 py-2 text-right">

<%= link_to 'Ver', report_path(report), class: 'bg-indigo-600 text-white hover:bg-indigo-700 font-semibold py-2 px-4 rounded-md shadow-sm' %>
<%= link_to 'Generar PDF', report_path(report, format: :pdf), target: :_blank, class: 'bg-indigo-600 text-white hover:bg-indigo-700 font-semibold py-2 px-4 rounded-md shadow-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

</div>
