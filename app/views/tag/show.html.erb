          </div>
          <div>
            <ul class="cloud">
              <% prepare_word_cloud_data(@comments_word_occurrences, @positive_words, @negative_words).each do |word_data| %>
                <li style='color: <%= word_data[:color] %>'
                    data-weight="<%= word_data[:weight] %>"
                    data-sentiment="<%= word_data[:sentiment] || 'neutral' %>">
