<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item">Etiqueta</li>
    <li class="breadcrumb-item active" aria-current="page"><%=@tag.name%></li>
  </ol>
</nav>

<h3>Análisis de los últimos 30 días</h3>
<%= column_chart @entries.where(published_at: 30.days.ago..Time.now).group_by_day(:published_at).count, xtitle: "Fecha", ytitle: "Cant. Notas", label: "Notas", colors: ['blue'] %>
<%= column_chart @entries.where(published_at: 30.days.ago..Time.now).group_by_day(:published_at).sum(:total_count), xtitle: "Fecha", ytitle: "Interacciones", label: "Interacciones", colors: ['green']%>

<div class="container py-4">
  <div class="row">
    <div class="col">
    <h3>Notas por medio</h3>
      <%= pie_chart @entries.group("sites.name").count, donut: true %>
    </div>
    <div class="col">
      <h3>Interacciones por medio</h3>    
      <%= pie_chart @entries.group("sites.name").sum(:total_count), donut: true %>
    </div>
  </div>
</div>


<hr>

<div class="my-2">
  <h3>Etiquetas relacionadas</h2>
  <%= render partial: "tag/tag_pill", collection: @tags, cache: true %>
  <p><small class="text-muted px-1">*Cantidad de veces que aparecen las etiquetas en las notas</small></p>
</div>

<hr>

<h3>Últimas Noticias sobre <%=@tag.name%></h3>
<div class="row py-2" data-masonry='{"percentPosition": true }'>
<%= render partial: "entry/entry", collection: @entries, cache: true %>
</div>
