                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </section>
    <%end%>
    <!-- Word Analysis Section -->
    <section class="mb-8">
      <%= render partial: "tag/word_cloud_modern",
                 locals: {
                   title: "Análisis de Palabras en Notas",
                   icon: "fa-spell-check",
                   icon_color: "text-green-600",
                   word_data: @word_occurrences,
                   description: "Análisis de frecuencia de palabras clave que aparecen en las noticias con esta etiqueta"
                 } %>
    </section>
    <!-- Bigram Analysis Section -->
    <section class="mb-8">
      <%= render partial: "tag/word_cloud_modern",
                 locals: {
                   title: "Análisis de Bigramas en Notas",
                   icon: "fa-comments",
                   icon_color: "text-blue-600",
                   word_data: @bigram_occurrences,
                   description: "Análisis de pares de palabras consecutivas (bigramas) más frecuentes"
                 } %>
    </section>
    <%if @tag.belongs_to_any_topic? && @comments.any? %>
      <!-- Comments Analysis Section -->
      <section class="mb-8">
        <%= render partial: "tag/word_cloud_modern",
                   locals: {
                     title: "Análisis de Palabras en Comentarios",
                     icon: "fa-comment-dots",
                     icon_color: "text-purple-600",
                     word_data: @comments_word_occurrences,
                     description: "Análisis de frecuencia de palabras en comentarios de Facebook"
                   } %>
        <div class="mt-4 text-right">
          <%=link_to 'Ver comentarios', tag_comments_path(@tag), class: 'rounded bg-white px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50' %>
        </div>
      </section>
    <%end%>
    <!-- Top Interactions Section -->
    <section class="mb-8">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <%= render partial: 'entry/entries', locals: { last_entries: @most_interactions, title: 'Top Interacciones de la Etiqueta' } %>
      </div>
    </section>
  </div>
</main>
<script>
  function click_manager(object, event){
    console.log(event);
    if (event.point) {
      // You can access the clicked point's information here
      var seriesName = event.point.series.name;
      var category = event.point.category;
      var value = event.point.y;

      // Perform actions based on the clicked point's information
      console.log("Clicked on:", seriesName, "Category:", category, "Value:", value);
    }
  };

  function set_click_manager(){
    console.log('manager loaded...--');
    var chart = Chartkick.charts['chart-1'].getChartObject(); // Replace 'bar-chart-id' with the actual ID of your chart element
    chart.series[0].update({events:{click: function(event) { click_manager(this, event) } }});
  }

  document.addEventListener('DOMContentLoaded', function() {
    console.log('loaded...--');
    setTimeout(set_click_manager, 2000); // 5000 milliseconds = 5 seconds
  });
</script>
